<?xml version="1.0"?>
<robot name="sedan">
  <link name="base_link">
    <!-- Visual -->
    <visual>
      <origin xyz="0 0 0.75" rpy="0 0 0"/>
      <geometry>
        <box size="4.5 2.0 1.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.3 0.8 1.0"/>
      </material>
    </visual>
    
    <!-- Collision -->
    <collision>
      <origin xyz="0 0 0.75" rpy="0 0 0"/>
      <geometry>
        <box size="4.5 2.0 1.5"/>
      </geometry>
    </collision>
    
    <!-- Inertial -->
    <inertial>
      <origin xyz="0 0 0.75" rpy="0 0 0"/>
      <mass value="1200"/>
      <inertia ixx="100.0" ixy="0.0" ixz="0.0" 
               iyy="100.0" iyz="0.0" izz="100.0"/>
    </inertial>
  </link>
</robot>
