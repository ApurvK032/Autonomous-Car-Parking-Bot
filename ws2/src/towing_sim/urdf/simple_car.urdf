<?xml version="1.0"?>
<robot name="simple_car">

  <!-- Main Body (Lower part - chassis) - BRIGHT BLUE -->
  <link name="body">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="4.0 2.0 0.4"/>
      </geometry>
      <material name="bright_blue">
        <color rgba="0.0 0.4 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="4.0 2.0 0.4"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>999999999999.0</mu>
            <mu2>999999999999.0</mu2>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
            <fdir1>0 0 0</fdir1>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>100000000000.0</kp>
            <kd>1000.0</kd>
            <max_vel>0.0</max_vel>
            <min_depth>0.0001</min_depth>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="700"/>
      <inertia ixx="150.0" ixy="0" ixz="0" iyy="150.0" iyz="0" izz="100.0"/>
    </inertial>
  </link>

  <!-- Gazebo material for body (needed for proper rendering) -->
  <gazebo reference="body">
    <material>Gazebo/Blue</material>
  </gazebo>

  <!-- Upper Body (Cabin) - BRIGHT BLUE -->
  <link name="cabin">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="2.5 1.8 0.8"/>
      </geometry>
      <material name="bright_blue">
        <color rgba="0.0 0.4 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="2.5 1.8 0.8"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="300"/>
      <inertia ixx="80.0" ixy="0" ixz="0" iyy="60.0" iyz="0" izz="50.0"/>
    </inertial>
  </link>

  <!-- Gazebo material for cabin -->
  <gazebo reference="cabin">
    <material>Gazebo/Blue</material>
  </gazebo>

  <joint name="cabin_joint" type="fixed">
    <parent link="body"/>
    <child link="cabin"/>
    <origin xyz="-0.3 0 1.1" rpy="0 0 0"/>
  </joint>

  <!-- Front Left Wheel (LOCKED - BLACK) -->
  <link name="wheel_fl">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>2.0</mu>
            <mu2>2.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="30"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
  </link>

  <gazebo reference="wheel_fl">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="wheel_fl_joint" type="fixed">
    <parent link="body"/>
    <child link="wheel_fl"/>
    <origin xyz="1.3 1.125 0" rpy="0 0 0"/>
  </joint>

  <!-- Front Right Wheel (LOCKED - BLACK) -->
  <link name="wheel_fr">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>2.0</mu>
            <mu2>2.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="30"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
  </link>

  <gazebo reference="wheel_fr">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="wheel_fr_joint" type="fixed">
    <parent link="body"/>
    <child link="wheel_fr"/>
    <origin xyz="1.3 -1.125 0" rpy="0 0 0"/>
  </joint>

  <!-- Rear Left Wheel (FREE - BLACK) -->
  <link name="wheel_rl">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="30"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
  </link>

  <gazebo reference="wheel_rl">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="wheel_rl_joint" type="continuous">
    <parent link="body"/>
    <child link="wheel_rl"/>
    <origin xyz="-1.3 1.125 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Right Wheel (FREE - BLACK) -->
  <link name="wheel_rr">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.35" length="0.25"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="30"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
  </link>

  <gazebo reference="wheel_rr">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="wheel_rr_joint" type="continuous">
    <parent link="body"/>
    <child link="wheel_rr"/>
    <origin xyz="-1.3 -1.125 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>